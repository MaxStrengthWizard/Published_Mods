local __util = require 'larian.util'

function AskBeforeBite()
    return Ally() | HasStatus('SG_Incapacitated', context.Target) | HasStatus('SG_Restrained', context.Target)
end

function NoAskBeforeBite()
    return HasStatus('SG_Incapacitated', context.Target) | HasStatus('SG_Restrained', context.Target)
end

function VampireBiteRoll()
    return Attack(AttackType.MeleeUnarmedAttack)
end
